<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorGray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ballclub_logo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/logo"/>
                <TextView
                    android:id="@+id/ballclub_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/ballclub_logo"
                    android:text="南昌"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/ball_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ballclub_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/ballclub_logo"
                    android:text="篮球"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
                <ImageView
                    android:id="@+id/dialog_cancel"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    />
                <!--android:background="@drawable/dialog_cancel"-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_sku"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ballclub_logo"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:focusable="false"
                    android:scrollbars="none" />
                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/rv_sku"
                    android:text="下一步"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/radius"/>
            </RelativeLayout>
        </ScrollView>
        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:layout_marginTop="0dp"
            android:layout_above="@id/btn_next"/>-->
    </RelativeLayout>


</RelativeLayout>