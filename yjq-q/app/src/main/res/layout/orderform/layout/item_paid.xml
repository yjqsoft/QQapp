<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite">
            <TextView
                android:id="@+id/tv_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="订单号:"
                android:textSize="16sp"
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/order_num"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_order_num"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:text="2019103000055"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                />
            <TextView
                android:id="@+id/order_time"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:text="2019-10-30 22:12:04"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_two"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorWhite"
            android:layout_marginTop="1dp"
            android:layout_below="@id/rl_one">
            <TextView
                android:id="@+id/tv_order_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单类型:"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/order_kind"
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_toEndOf="@id/tv_order_kind"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="羽毛球"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="10dp"
                android:text="地址:"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                />
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/tv_location"
                android:text="东川区老年活动..."
                android:textColor="@color/colorBlack"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:layout_above="@+id/appointment_time" />
            <TextView
                android:id="@+id/tv_appointment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/tv_order_kind"
                android:text="预约时段:"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/appointment_time"
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_toEndOf="@id/tv_appointment_time"
                android:layout_below="@id/order_kind"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:text="9:30~10:00"
                android:textSize="16sp"
                android:textColor="@color/colorBlack" />
            <TextView
                android:id="@+id/tv_site_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_location"
                android:text="场号:"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                />
            <TextView
                android:id="@+id/site_num"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/tv_site_num"
                android:layout_below="@id/location"
                android:text="4号场"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_three"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:layout_below="@id/rl_two"
            android:layout_marginTop="1dp">
            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:text="￥10.00"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="200dp"
                android:text="订单状态:"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_order_status"
                android:layout_marginStart="10dp"
                android:text="已支付"
                android:textSize="16sp"
                android:textColor="@color/colorBlack" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>