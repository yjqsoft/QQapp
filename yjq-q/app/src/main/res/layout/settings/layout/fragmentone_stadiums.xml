<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingTop="5dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/tv_ballclub_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="15sp" />
            <!--android:text="场馆名"-->
        <TextView
            android:id="@+id/tv_appraise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/tv_ballclub_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="49dp" />
        <!--android:text="五颗星"-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"

            android:textSize="14sp"
            android:layout_alignBaseline="@+id/tv_distance"
            android:layout_alignBottom="@+id/tv_distance"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp" />
        <!--android:text="地址"-->
        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="14sp"
            android:layout_marginStart="42dp"
            android:layout_alignBaseline="@+id/btn_order"
            android:layout_alignBottom="@+id/btn_order"
            android:layout_toEndOf="@+id/tv_address" />
        <!--android:text="距离"-->
        <Button
            android:id="@+id/btn_order"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginLeft="100dp"
            android:text="预定"
            android:textSize="15sp"
            android:background="@color/colorAccent"
            android:textColor="@color/white"
            android:layout_marginEnd="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"

        android:textSize="14sp" />
    <!--android:text="价格"-->
</LinearLayout>