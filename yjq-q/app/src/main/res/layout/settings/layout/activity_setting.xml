<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context=".Sideslip.Sideslip_center.Setting.SettingActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:onClick="onClick"
            android:layout_centerVertical="true"
            android:background="@drawable/back"/>
        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_back"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_security"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_title"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        android:background="@color/colorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:text="安全设置"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"/>
        <ImageView
            android:id="@+id/iv_forward_one"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/forward"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/iv_forward_one"
            android:layout_centerVertical="true"
            android:text="手机号、密码"
            android:textColor="@color/colorGray_two"
            android:textSize="15sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_common"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_security"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/tv_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:text="通用" />
        <ImageView
            android:id="@+id/iv_forward_two"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/forward"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_about"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_common"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:text="关于" />
        <ImageView
            android:id="@+id/iv_forward_three"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/forward"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="版本号 1.0.0"
            android:layout_toStartOf="@id/iv_forward_three"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_account_switch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_about"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/tv_swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"
            android:text="换账号登录"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/iv_forward_four"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/forward"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_logout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/rl_account_switch"

        android:onClick="onClick"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:text="退出登录" />
        <ImageView
            android:id="@+id/iv_forward_five"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/forward"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>
