            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:background="@drawable/shopping_trolley"-->
            <!--android:onClick="onClick"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginEnd="10dp"/>-->
    </RelativeLayout>
    <ScrollView
        android:id="@+id/sv_test1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/rl_competition_label">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/rl_competition_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">
                <ImageView
                    android:id="@+id/iv_competition_poster"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/quanshui"/>
                <TextView
                    android:id="@+id/tv_competition_name_two"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:text="坂田泉水"
                    android:textSize="15sp"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/tv_competition_briefing"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:text="糟了，是心动的感觉，太好看了,表白泉水小姐姐"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_competition_price"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="90dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:text="￥不可售卖"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/colorGray"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/item_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/rl_competition_content"
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/tv_competition_group_booking_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:text="1人正在开团，可直接参与"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tv_competition_group_booking_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:onClick="onClick"
                    android:text="查看更多>"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_competition_group_booking_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_one"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite">
                <ImageView
                    android:id="@+id/iv_competition_group_booking_group_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/quanshui"/>
                <TextView
                    android:id="@+id/tv_competition_group_booking_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iv_competition_group_booking_group_head"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp"
                    android:text="泉水应援团"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="140dp"
                    android:text="还差"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_competition_group_booking_persons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="115dp"
                    android:text="2人"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="85dp"
                    android:text="拼成"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="140dp"
                    android:text="剩余"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_competition_group_booking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="80dp"
                    android:text="07:22:55"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"/>
                <Button
                    android:id="@+id/btn_competition_group_booking"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="onClick"
                    android:text="去参团"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorAccent"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/iv_competition_group_booking_group_head"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorGray" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/iv_competition_group_booking_group_head"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/tips"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_competition_group_booking_group_head"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="10dp"
                    android:text="好友参团·人满成交·人不满退款"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_competition_group_booking_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/iv_competition_group_booking_group_head"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="累计756人成团"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_competition_group_booking_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="赛事介绍"
                android:textSize="15sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_below="@id/rl_competition_group_booking_content"
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/tv_competition_announcer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:text="发布者:  江dada"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tv_competition_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_competition_announcer"
                    android:text="比赛类型:  篮球"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tv_competition_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_competition_type"
                    android:layout_marginEnd="10dp"
                    android:text="比赛时间:  2020/2/24 15:00:36"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tv_competition_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"

                    android:layout_below="@+id/tv_competition_time"
                    android:layout_marginEnd="10dp"
                    android:text="比赛场地:  东华理工大学南区食堂三楼羽毛球馆8号场地"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tv_competition_announce_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_competition_place"
                    android:layout_marginEnd="10dp"
                    android:text="发布时间:  2020/2/24 15:00:36"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tv_competition_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/tv_competition_announce_time"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="备注:  友谊第一，比赛第二，坚决不做第三者。"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">
        <LinearLayout
            android:id="@+id/ll_competition_advisory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:onClick="onClick"
            android:orientation="vertical">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/consultation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="客服咨询"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_competition_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:onClick="onClick"
            android:orientation="vertical"
            android:background="@color/colorSlashRed">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:text="￥不可售卖"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="个人报名"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_competition_booking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:onClick="onClick"
            android:orientation="vertical"
            android:background="@color/colorRed">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:text="￥不可售卖"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="组团报名"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
