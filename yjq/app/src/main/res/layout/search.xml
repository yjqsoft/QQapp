<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.yexin.menu6.Index.SearchActivity">
    <RelativeLayout
        android:id="@+id/rl_search_frame"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="取消"
            android:textSize="15sp"
            android:textColor="@color/colorBlue"/>
        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_cancel"
            android:background="@drawable/search_box_bg">
            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_search"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:paddingLeft="12dp"/>
            <EditText
                android:id="@+id/search_edit"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_toEndOf="@id/iv_search"
                android:layout_marginStart="5dp"
                android:hint="搜索"
                android:textColor="@color/colorBlack"
                android:background="@null"/>
            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_search_clear"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>
    </RelativeLayout>


    <ListView
        android:id="@+id/search_result_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_search_frame"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>