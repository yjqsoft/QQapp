<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yexin.menu6.Ballculb.Payfaceture">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:gravity="center|center_vertical"
        android:text="   请认真核对订单信息"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#FAFFFFFF"
        android:gravity="center"
        android:text="场馆： "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/changguan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="-7dp" />

    <TextView
        android:id="@+id/changguan"
        android:layout_width="318dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="#FAFFFFFF"
        android:gravity="left|center_vertical"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/xiangmu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="73dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="#FAFFFFFF"
        android:gravity="center"
        android:text="项目：  "
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/xiangmu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="-6dp" />

    <TextView
        android:id="@+id/xiangmu"
        android:layout_width="318dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="#FAFFFFFF"
        android:gravity="left|center_vertical"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/changguan"
        tools:layout_editor_absoluteX="74dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="#FAFFFFFF"
        android:gravity="center"
        android:text="日期：  "
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/riqi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="-6dp" />

    <TextView
        android:id="@+id/riqi"
        android:layout_width="318dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="#FAFFFFFF"
        android:gravity="left|center_vertical"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/xiangmu"
        tools:layout_editor_absoluteX="74dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="#FAFFFFFF"
        android:gravity="center"
        android:text="场地：  "
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/changdi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="-6dp" />

    <TextView
        android:id="@+id/changdi"
        android:layout_width="318dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="#FAFFFFFF"
        android:gravity="left|center_vertical"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/riqi"
        tools:layout_editor_absoluteX="74dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="#FAFFFFFF"
        android:gravity="center"
        android:text="价格：  "
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/jiage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="-6dp" />

    <TextView
        android:id="@+id/jiage"
        android:layout_width="318dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:background="#FAFFFFFF"
        android:gravity="left|center_vertical"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/changdi"
        tools:layout_editor_absoluteX="74dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="379dp"
        android:layout_height="193dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/shape1"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="3dp" />

    <RadioGroup
        android:id="@+id/payWay_choose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:layout_editor_absoluteX="86dp">

        <RadioButton
            android:id="@+id/bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:padding="20dp"
            android:text="银行卡支付" />

        <RadioButton
            android:id="@+id/alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:padding="20dp"
            android:text="支付宝支付" />

        <RadioButton
            android:id="@+id/weChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:padding="20dp"
            android:text="微信支付" />
    </RadioGroup>

    <Button
        android:id="@+id/sure"
        android:layout_width="385dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="44dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:paddingStart="50dp"
        android:paddingTop="10dp"
        android:paddingEnd="50dp"
        android:paddingBottom="10dp"
        android:text="确定"
        android:textColor="#F7F3F3"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="269dp"
        android:layout_height="22dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="在预定开始时间前12小时可申请退款"
        app:layout_constraintBottom_toTopOf="@+id/sure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="58dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="请选择支付方式"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jiage"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="112dp" />
</android.support.constraint.ConstraintLayout>
